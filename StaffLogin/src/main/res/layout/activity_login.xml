<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtStaffHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:text="Staff Login"
            android:textSize="29sp" />

        <EditText
            android:id="@+id/etStaffPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtStaffHead"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:hint="Phone"
            android:inputType="text"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etStaffPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etStaffPhone"
            android:layout_margin="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="22sp" />
        <ProgressBar
            android:id="@+id/prBarLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etStaffPass"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prBarLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="Login"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Forgot password?"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnRegisterNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtForgot"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Register Now"
            android:textSize="17sp"
            />

    </RelativeLayout>
</ScrollView>