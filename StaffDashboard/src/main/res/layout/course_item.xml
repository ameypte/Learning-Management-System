<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="9dp"
    android:layout_marginVertical="6dp"

    app:strokeWidth="1dp"
    app:strokeColor="#D8D5D5"
    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">
        <TextView
            android:id="@+id/course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:text="IF5465"
            android:textColor="#1E1E1E"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_close_24"
            android:padding="6dp"
            />

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_code"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Subject-Name"
            android:textColor="#F0505050"
            android:textSize="17sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/course_title"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#4073F4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/baseline_cloud_upload_24"
                android:gravity="center"
                android:padding="12dp"
                android:text="Upload"
                android:textColor="#000"
                android:textSize="16sp" />

            <View
                android:id="@+id/lineVertical"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/course_title"
                android:layout_margin="0dp"
                android:layout_marginVertical="4dp"
                android:background="#4073F4" />

            <TextView
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/baseline_view_24"
                android:gravity="center"
                android:padding="12dp"
                android:text="View"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>